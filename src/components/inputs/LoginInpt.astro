---
interface Props{
    form: string;
    name: string;
    type: "email" | "password";
    label: "Email Address" | "Password";
};

const {form, name, type, label } = Astro.props;
---

<div class="
    max-w-xl max-h-20 min-h-20 w-full bg-black
    py-2 px-4">
    <label for={name}>{label}</label>
    <input form={form} name={name} type={type} class="text-WIblue"/>
</div>