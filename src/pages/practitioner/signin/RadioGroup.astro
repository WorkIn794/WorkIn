---
import RadioBtn from "@components/inputs/RadioBtn.astro";
import { twMerge } from "tailwind-merge";
import type { HTMLAttributes } from "astro/types";
import type { ClassName } from "src/types/global";

interface Props extends HTMLAttributes<"fieldset">{
    group: string;
    form: string;
    buttons: ReadonlyArray<[string, string]>; // [label, value]
    required?: boolean;
    orderRow?: boolean;
    className?: ClassName;
};

const { group, form, buttons, required, orderRow, className, ...fieldsetProps } = Astro.props;
---

<fieldset form={form} class={twMerge([className, "flex justify-between"])} {...fieldsetProps}>
    {buttons.map(([label, value]) => <RadioBtn form={form} group={group} label={label} value={value} required={required}/>)}
</fieldset>